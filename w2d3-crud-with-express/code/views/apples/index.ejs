<html>
  <head>
    <title>List of apples!</title>
  </head>
  <style>
  h1 {font-family: arial;}
  </style>
  <body>
    <h1>All MY apples!</h1>
    <p>
      <a href="/apples/new">Add new apple</a>
    </p>
    <hr />
    <div class="apples-container">
      <% for(let i = 0; i < apples.length; i++) { %>
        <div class="apple">
          <p>
            <strong>Apple type:</strong> <%= apples[i].type %>
            <br />
            <strong>Apple color:</strong> <%= apples[i].color %>
            <br />
            <a href="/apples/<%= i %>">Details</a> |
            <a href="/apples/<%= i %>/edit">Edit</a>
          </p>
        </div>
      <% } %>
    </div>
    <script>
    // alert('This will only run in the browser')
    </script>
  </body>
</html>
